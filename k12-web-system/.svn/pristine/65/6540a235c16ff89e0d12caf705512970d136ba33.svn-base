package com.wdcloud.ueditor.extend.ueditor;

import java.util.Map;

import javax.servlet.http.HttpServletRequest;

import com.baidu.ueditor.define.State;

public class UeditorUploader {

	private HttpServletRequest	request			= null;
	private Map<String, Object>	conf			= null;

	private UeditorService		ueditorService	= null;

	public UeditorUploader(HttpServletRequest request, Map<String, Object> conf, UeditorService ueditorService) {

		this.request = request;
		this.conf = conf;

		this.ueditorService = ueditorService;
	}

	public final State doExec() {

		String filedName = (String) conf.get("fieldName");
		State state = null;

		if ("true".equals(conf.get("isBase64"))) {
			state = UeditorBase64Uploader.save(request.getParameter(filedName), conf, ueditorService);
		} else {
			state = UeditorBinaryUploader.save(request, conf, ueditorService);
		}

		return state;
	}

}
